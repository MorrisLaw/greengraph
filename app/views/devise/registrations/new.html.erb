<% @body_id = "signuppage" %>
<div class="row" style="margin-top: 10%" align="center">
<div class="col-sm-4 col-sm-offset-4">
<h2 style="border-bottom: 3px solid #568259; color: #568259; font-size: 500%; ">SIGN UP</h2>
<br/>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div style="color: #568259; font-size: 150%">
    Email:  <br><%= f.email_field :email, autofocus: true, placeholder: "Email", class: "email" %>
  </div>

  <div style="color: #568259; font-size: 150%">
    Password:  <br><%= f.password_field :password, autocomplete: "off", class: "email", placeholder: "Password" %>
  </div>

  <div  style="color: #568259; font-size: 150%" >
    Re-Enter Password:  <br><%= f.password_field :password_confirmation, autocomplete: "off", class: "email", placeholder: "Confirm Password" %>
  </div>
  <br/>
  <%= f.submit "Sign up", class: "sign", name: "commit" %>
  <br/>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
