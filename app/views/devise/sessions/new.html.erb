<% @body_id = "signinpage" %>
<div class="row" align="center" style="margin-top: 10%">
<div class="col-sm-4 col-sm-offset-4">
<h2 style="border-bottom: 3px solid #568259; color: #568259; font-size: 500%; ">LOG IN</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= f.label :email, style: "color: #568259; font-size: 150%" %>
  <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "email" %>
  
  <%= f.label :password, style: "color: #568259; font-size: 150%" %>
  <%= f.password_field :password, autocomplete: "off",  class: "email", placeholder: "Password" %>

  <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, style: "color: #568259; font-size: 150%;" %>
  <% end %>
  <br/><br/>
  <%= f.submit "Log in", class: "sign", name: "commit" %>
<% end %>
<br/>
<%= render "devise/shared/links" %>
</div>
</div>